      "get": {
        "tags": ["Goal"],
        "summary": "Get Goal By ID",
        "operationId": "getGoal",
        "parameters": [
          {
            "name": "goalId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiResponseGoal"
                }
              }
            }
          }
        }
      }
    },
