{
  "openapi": "3.0.1",
  "info": {
    "title": "YOLO Life Timer API",
    "description": "API documentation for YOLO Life Timer Backend MVP",
    "version": "v1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Local Development Server"
    }
  ],
  "paths": {
    "/api/life/configLife": {
      "post": {
        "tags": ["Life"],
        "summary": "Configure Life Parameters",
        "operationId": "configLife",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LifeConfigRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiResponseVoid"
                }
              }
            }
          }
        }
      }
    },
    "/api/life/getLifeConfig": {
      "get": {
        "tags": ["Life"],
        "summary": "Get Life Configuration",
        "operationId": "getLifeConfig",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiResponseLifeConfigDto"
                }
              }
            }
          }
        }
      }
    },
    "/api/life/getLifeStatus": {
      "get": {
        "tags": ["Life"],
        "summary": "Get Life Status",
        "operationId": "getLifeStatus",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiResponseLifeStatusDto"
