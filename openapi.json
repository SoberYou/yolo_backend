      "post": {
        "tags": ["Focus"],
        "summary": "Start Focus Session",
        "operationId": "startFocus",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/FocusStartRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiResponseFocusSession"
                }
              }
            }
          }
        }
      }
