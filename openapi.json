      "get": {
        "tags": ["Focus"],
        "summary": "Get Focus Statistics",
        "operationId": "getStatistics",
        "parameters": [
          {
            "name": "goalId",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiResponseFocusStatsDto"
                }
              }
            }
          }
        }
      }
    }
